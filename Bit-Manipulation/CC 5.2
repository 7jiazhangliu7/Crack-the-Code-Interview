public class PrintBinary {

    public String printBinary(double num) {
        if(num >= 1 || num <= 0) return "ERROR";

        StringBuffer sb = new StringBuffer();
        sb.append("0.");

        while(num > 0) {
            if(sb.length() > 32) return "ERROR";

            double r = num * 2;

            if(r >= 1.0) {
                sb.append("1");
                num = r-1;
            } else {
                sb.append("0");
                num = r;
            }
        }

        return sb.toString();
    }

    public static void main(String args[]) {
        PrintBinary i = new PrintBinary();
        double input = 0.875;
        System.err.println("Input: " + input + " Input Binary: " + i.printBinary(input));
    }
}
