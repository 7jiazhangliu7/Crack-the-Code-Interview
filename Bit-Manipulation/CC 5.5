//Write a function to determine the number of bits required to convert integer A to integer B.
public class BitsNeededToConvertAtoB {

    public static int bitSwapRequired(int a, int b) {
        // write your code here
        if(a == b) return 0;
        int counter = 0;
        for(int c = a ^ b; c != 0; c = c & (c-1)){
            counter++;
        }
        return counter;
    }

    public static void main(String args[]) {
        BitsNeededToConvertAtoB i = new BitsNeededToConvertAtoB();

        int A = 64;
        int B = 127;

        System.err.println("A: " + Integer.toBinaryString(A));
        System.err.println("B: " + Integer.toBinaryString(B));

        System.err.println(i.bitSwapRequired(A,B));
    }
}
