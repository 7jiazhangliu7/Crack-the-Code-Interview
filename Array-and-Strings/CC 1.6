// Given an image represented by an NxN matrix, where each pixel in the image is 4
// bytes, write a method to rotate the image by 90 degrees. Can you do this in place

public class Rotate90Degree {

    public void rotate(int[][] input) {
        if(input == null || input.length == 0 || input[0].length == 0) {
            return;
        }

        for(int i = 0; i < input.length; i++) {
            for(int j = 0; j <= i; j++) {
                if(i == j) continue;

                int tmp = input[i][j];
                input[i][j] = input[j][i];
                input[j][i] = tmp;
            }
        }

        for(int i = 0; i < input.length; i++) {
            for(int j = 0; j < input[0].length/2; j++) {
                int tmp = input[i][j];
                input[i][j] = input[i][input[0].length-1-j];
                input[i][input[0].length-1-j] = tmp;
            }
        }
    }

    public void display(int[][] input) {
        for(int i = 0; i < input.length; i++) {
            for(int j = 0; j < input[0].length; j++) {
                System.err.print(input[i][j] + " ");
            }
            System.err.println();
        }
    }

    public static void main(String args[]) {
        Rotate90Degree r = new Rotate90Degree();

        int[][] input = {{1,2,3},{4,5,6},{7,8,9}};
        r.display(input);
        r.rotate(input);
        r.display(input);
    }
}
